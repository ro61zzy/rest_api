<h3>{{viewTitle}}</h3>

<form action="/student" method="POST" autocomplete="off">

<input type="hidden" name="_id" value="{{student._id}}"/>

  <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" value="{{student.fullName}}" required />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control"  name="email" value="{{student.email}}" required />
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
        <label>Mobile</label>
        <input type="number" class="form-control"  name="mobile" value="{{student.mobile}}" required />
        </div>
         <div class="form-group col-md-6">
        <label>City</label>
        <input type="text" class="form-control"  name="city" value="{{student.city}}" required />
        </div>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/student/list">View All</a>
    </div>
</form>