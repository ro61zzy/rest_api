

<h3>
    <a class="btn btn-secondary" href="/student">Create New</a> Student List
</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/student/{{this._id}}" class="btn btn-warning btn sm">Edit</a>
                <a class="btn btn-danger" href="/delete/{{this._id}}" onclick="return confirm('Are you sure you wat to delete?')" >Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
